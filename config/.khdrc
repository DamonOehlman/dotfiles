# Enable kwm compatibility mode
khd kwm on

# set border color for different modes
khd mode default color 0xddd5c4a1
khd mode switcher color 0xffff0000
khd mode resizer color 0xff0000ff

# mode selectors
ctrl - up : khd -e "mode activate switcher"
ctrl - s : khd -e "mode activate resizer"

# Launch iTerm2
# cmd - return : open -na /Applications/Utilities/Terminal.app

# switcher mode
switcher + ctrl - r : khd -e "reload"

switcher + ctrl - up : khd -e "mode activate default"
switcher - escape : khd -e "mode activate default"
switcher + ctrl - s : khd -e "mode activate resizer"

switcher - right : kwmc window -f next
switcher - left : kwmc window -f prev

switcher - up : kwmc space -fExperimental left
switcher - down : kwmc space -fExperimental right
switcher + ctrl + shift - up : kwmc window -m space left
switcher + ctrl + shift - down : kwmc window -m space right

# resizer mode
resizer + ctrl - s : khd -e "mode activate default"
resizer - escape : khd -e "mode activate default"
resizer + ctrl - up : khd -e "mode activate switcher"

resizer - up : kwmc window -c reduce 0.1 south
resizer - down : kwmc window -c expand 0.1 south
resizer - left : kwmc window -c reduce 0.1 east
resizer - right : kwmc window -c expand 0.1 east
