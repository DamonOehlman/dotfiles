# Enable kwm compatibility mode
khd kwm on

# set border color for different modes
khd mode default color 0xddd5c4a1
khd mode switcher color 0xffff0000

# switcher modes
ctrl - up : khd -e "mode activate switcher"

# Launch iTerm2
cmd - return : open -na /Applications/Utilities/Terminal.app

# switcher mode
switcher - r : khd -e "reload"
switcher + ctrl - up : khd -e "mode activate default"
switcher - down : kwmc window -fm next
switcher - escape : khd -e "mode activate default"
switcher - left : kwmc space -fExperimental left
switcher - right : kwmc space -fExperimental right

# move windows between spaces
cmd + ctrl - left: kwmc window -m space left
cmd + ctrl - right: kwmc window -m space right

# window navigation
navigate - left : kwmc window -fm prev
navigate - right : kwmc window -fm next
