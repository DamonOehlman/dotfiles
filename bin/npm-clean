#!/usr/bin/env bash
for dir in *; do
  if [ -d "${dir}" ]; then
    pushd "$dir" > /dev/null

    if [ -e package.json ]; then
      echo -ne "\033]0;reinstalling packages with npm for: ${dir}\007"
      rm -rf node_modules
      npm install

      # if npm failed, then abort
      if [ $? -ne 0 ]; then
        exit $?
      fi
    fi

    popd > /dev/null
  fi
done